int factorial(int n) {
    if (n <= 1) {
        return 1;
    }
    else {
        return n * factorial(n - 1);
    }
}

int main() {
    int n = 4;
    int result = factorial(n);

    putc('n');
    putc('=');
    puti(n);
    putc('\n');

    putc('r');
    putc('=');
    puti(result);
    putc('\n');

    return 0;
}
